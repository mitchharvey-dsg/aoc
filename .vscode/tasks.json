{
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "build",
                        "type": "shell",
                        "command": "zig build",
                        "problemMatcher": [],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                },
                {
                        "command": "zig run ${file} -lc",
                        "group": {
                                "kind": "build",
                                "isDefault": false
                        },
                        "label": "Run File",
                        "presentation": {
                                "clear": true,
                                "reveal": "always",
                                "panel": "shared"
                        },
                        "type": "shell"
                },
                {
                        "command": "zig build -freference-trace",
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "label": "Build (Debug)",
                        "presentation": {
                                "clear": true,
                                "reveal": "silent",
                                "revealProblems": "onProblem",
                                "panel": "shared",
                                "close": true,
                        },
                        "type": "shell",
                        "options": {
                                "cwd": "${fileDirname}"
                        }
                },
        ]
}